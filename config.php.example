<?php

// Edit this
$base_config = [
    'username'      => '', // site username
    'torrent_pass'  => '', // site torrent_pass
    'auth'          => '', // site_auth
    'url'           => '', // site base url
];

// Do not edit this
if (count($argv) === 1) {
    $config = [
        'category'      => readline('Site Category ID: '), // this can be found on your site, categoryids.php
        'path'          => readline('Path to Data(must be a directory): '), // this must a folder
        'descr'         => readline('Path to Description File(must be a file): '), // this must be a file
    ];
} elseif (count($argv) === 4) {
    $config = [
        'category'      => $argv[1], // this can be found on your site, categoryids.php
        'path'          => $argv[2], // this must a folder
        'descr'         => $argv[3], // this must be a file
    ];
} else {
    die("You must include category, path and descr\n{$argv[1]} 14 '/path/to/movie' '/path/to/descr.txt'\n\n");
}

$config = array_merge($base_config, $config);
