{
    "require": {
        "mp091689/dump-die": "^1.0",
        "php-curl-class/php-curl-class": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "": "src"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "composer dump-autoload -o",
            "cp -n config.php.example config.php"
        ],
        "post-update-cmd": [
            "composer dump-autoload -o"
        ]
    }
}
